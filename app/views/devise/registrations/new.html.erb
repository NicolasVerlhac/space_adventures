<div class="container text-center m-3">
  <div class="row">
    <div class="col-sm-6 offset-sm-3">
      <div class="border p-4" id="border-form">
        <h1>Rejoignez nous</h1>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email,
                :label => "Email",
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" }%>
    <%= f.input :password,
                :label => "Mot de passe ",
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                :label => "Confirmation du mot de passe",
                required: true,
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :first_name,
                :label => "Ton petit prénom",
                required: true,
                autofocus: true,
                input_html: { autocomplete: "first_name" } %>
    <%= f.input :last_name,
                :label => "Ton petit nom",
                required: true,
                autofocus: true,
                input_html: { autocomplete: "last_name" } %>
    <%= f.input :phone,
                :label => "Ton 06",
                required: true,
                autofocus: true,
                input_html: { autocomplete: "phone" } %>
    <%= f.input :licence,
                :label => "Numéro de permis",
                required: true,
                autofocus: true,
                input_html: { autocomplete: "licence" } %>
    <%= f.input :birthdate,
                :label => "Date de naissance",
                required: true,
                autofocus: true,
                input_html: { autocomplete: "birthdate" } %>
    <%= f.input :photo, as: :file %>
  </div>

  <div class="form-actions">
    <p class="btn btn-primary"><%= f.button :submit, "S'inscrire" %></p>
  </div>
<% end %>

<%= render "devise/shared/links" %>
 </div>
    </div>
  </div>
</div>
