<div class="container col-11">
  <div class="card-trip-show">
    <% if @vehicule.photo.attached? %>
    <%= cl_image_tag @vehicule.photo.key, height: 300, width: 400, crop: :fill %>
    <% else %>
    <img src="https://images.unsplash.com/photo-1543599723-86e84893ebba?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1494&q=80" height="500" width="400" />
    <% end %>
    <div class="card-trip-infos-show">
      <img src="https://cdn3.vectorstock.com/i/1000x1000/50/97/space-alien-head-on-white-background-design-vector-22325097.jpg" class="card-trip-user-show avatar-bordered" />
      <div>
        <h2><%= @vehicule.title %></h2>
        <h3><i><%= @vehicule.description %></i></h3>
        <h3>💸 à partir de <strong><%=@vehicule.daily_price%>€</strong>/jour</h3>
        <h3>👨‍✈️ équipage max : <%= @vehicule.capacity %> personnes</h3>
        <h3>🗺 <%= @vehicule.address %>, <%= @vehicule.city %>, <%= @vehicule.country %></h3>
        <h3> <% if @vehicule.permit %>
          ✅
          <% else %>
          ❌
          <% end %>
        Permis nécessaire </h3>
        <h3> <% if @vehicule.availability %>
          ✅
          <% else %>
          ❌
          <% end %>
        Engin disponible</h3>
      </div>
    </div>
  </div>
  <div class="form-show">
    <h2>🗓 Réservez votre <%=@vehicule.title %> </h2>
    <div class="container">
        <div class='col-md-5'>
            <div class="form-group">
                <div class='input-group date' id='datetimepicker6'>
                    <input type='date' class="form-control" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            </div>
        </div>
        <div class='col-md-5'>
            <div class="form-group">
                <div class='input-group date' id='datetimepicker7'>
                    <input type='date' class="form-control" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            </div>
        </div>
    </div>
    <button name="button" type="submit" class="btn btn-flat" data-toggle="modal" data-target="#myModal"> Je réserve !</button>

<!-- Modal -->
  <div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">

      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Bienvenue</h4>
        </div>
        <div class="modal-body">
          <p>Votre véhicule a bien été ajouté à votre compte.</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>

    </div>
  </div>




  </div>
  <p><%= link_to 'Back to list', vehicules_path(@vehicules) %></p>
</div>






