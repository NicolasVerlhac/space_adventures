<div class="container text-center m-3">
  <div class="row">
    <div class="col-sm-6 offset-sm-3">
      <div class="border p-4" id="border-form">
        <h1>Publiez votre annonce</h1><br>
        <%= simple_form_for @vehicule do |f| %>
        <% config.input_mappings = { /country/ => :string }  %>
        <%= f.input :title, label: 'Titre de votre annonce' %>
        <%= f.input :description, label: 'Description de votre véhicule' %>
        <%= f.input :category, label: 'Catégorie de véhicule', collection: [ "JetPack", "Catapulte", "X-wing", "Fusée", "Soucoupe", "Canon"] %>
        <%= f.input :capacity, label: 'Capacité' %>
        <%= f.input :country, label: 'Pays',
                      input_html: { autocomplete: "country" }%>
        <%= f.input :city, label: 'Ville',
                      input_html: { autocomplete: "city" }%>
        <%= f.input :address, label: 'Adresse',
                      input_html: { autocomplete: "address" }%>
        <%= f.input :daily_price, label: 'Tarif journalier' %>
        <%= f.input :permit, label: 'Permis nécessaire pour piloter le véhicule ?', collection: [ "Oui", "Non"] %>
        <%= f.input :availability, label: 'Véhicule disponible ?', collection: [ "Oui", "Non"] %>
        <%= f.input :photo, as: :file %>
        <%= f.submit 'Créer mon véhicule', class:"btn btn-flat"%>

        <% end %>
      </div>
    </div>
  </div>
</div>


