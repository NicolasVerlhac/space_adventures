
<div class="container col-11">
  <h1 class="profile-title">Dashboard - Bienvenue <strong><%= current_user.first_name %></strong> !</h1>
    <div>
      <h2 class= "profile-subtitle"> Mes voyages : </h2>
      <% @bookings = current_user.bookings %>
      <% @bookings.each do |booking| %>
        <div class="card-product-profile">
          <% if booking.vehicule.photo.attached? %>
              <%= cl_image_tag booking.vehicule.photo.key, crop: :fill %>
            <% else %>
              <img src="https://images.unsplash.com/photo-1543599723-86e84893ebba?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1494&q=80" height="500" width="400" />
            <% end %>
        <div class="card-product-infos-profile">
          <h2><%= booking.vehicule.title %></h2>
          <h3><%= booking.start_date%> au <%= booking.end_date %></h3>
          <p><%= booking.vehicule.description %></p>
          <p>Loué par <%= booking.vehicule.user.first_name %> <%= booking.vehicule.user.last_name %></p>

        </div>
      </div>
    </div>
      <% end  %>

  <div>
    <h2 class= "profile-subtitle"> Mes véhicules loués : </h2>
      <% @bookings_as_owner.each do |booking| %>
       <div class="card-product-profile">
        <% if booking.vehicule.photo.attached? %>
        <%= cl_image_tag booking.vehicule.photo.key, crop: :fill %>
        <% else %>
        <img src="https://images.unsplash.com/photo-1543599723-86e84893ebba?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1494&q=80" height="500" width="400" />
        <% end %>
      <div class="card-product-infos-profile">
         <h2><%= booking.vehicule.title %></h2>
         <h3><%= booking.start_date%> au <%= booking.end_date %></h3>
          <p><%= booking.vehicule.description %></p>
          <p>Loué à <%= booking.user.first_name %> <%= booking.user.last_name %></p>
    </div>
  </div>

      <% end  %>


  </div>

  <h2 class= "profile-subtitle"> Liste de mes véhicules : </h2>
    <div class='column-cards'>
    <% @vehicules = current_user.vehicules %>
    <% @vehicules.each do |vehicule| %>
    <%= link_to vehicule_path(vehicule) do %>
      <div class="card-trip">
        <% if vehicule.photo.attached? %>
          <%= cl_image_tag vehicule.photo.key, crop: :fill %>
        <% else %>
          <img src="https://images.unsplash.com/photo-1543599723-86e84893ebba?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1494&q=80" height="500" width="400" />
        <% end %>
        <div class="card-trip-infos">
          <div>
            <h2><%= vehicule.title %></h2>
            <p><%= vehicule.description %></p>
            <p> A partir de <strong><%=vehicule.daily_price.round%>€</strong></p>
          </div>
          <img src="https://cdn3.vectorstock.com/i/1000x1000/50/97/space-alien-head-on-white-background-design-vector-22325097.jpg" class="card-trip-user avatar-bordered" />
        </div>
      </div>
    <% end %>
    <% end %>
    </div>

  </div>
</div>




