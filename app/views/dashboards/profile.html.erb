<div>
  <h1 class="text-center">Dashboard</h1>
</div>

<div>
  <h2> Liste de mes réservations en tant que locataire : </h2>
    <% @bookings = current_user.bookings %>
    <% @bookings.each do |booking| %>
    <div class="card text-white bg-dark mb-3" style="max-width: 18rem;">
    <div class="card-body">
    <h5 class="card-title"></h5>
    <p class="card-text"><p><br>
      Dates de réservation :<br>
      du <%= booking.start_date%> au <%= booking.end_date%><br><br>
      Véhicule : <%= booking.vehicule.title %><br><br>
      Propriétaire : <%= booking.user.first_name %> <%= booking.user.last_name %>

    </p>
  </div>
</div>

    <% end  %>

</div>

<div>
  <h2> Liste de mes réservations en tant que proprétaire : </h2>
    <% @bookings_as_owner.each do |booking| %>
    <div class="card text-white bg-dark mb-3" style="max-width: 18rem;">
    <div class="card-body">
    <h5 class="card-title"></h5>
    <p class="card-text"><p><br>
      Dates de réservation :<br>
      du <%= booking.start_date%> au <%= booking.end_date%><br><br>
      Véhicule : <%= booking.vehicule.title %><br><br>
      Loué à : <%= booking.user.first_name %> <%= booking.user.last_name %>

    </p>
  </div>
</div>

    <% end  %>

</div>




<div>
       <h2> Liste de mes véhicules : </h2>
</div>

  <div class='d-flex'>

    <div class='column-cards'>

    <% @vehicules = current_user.vehicules %>
    <% @vehicules.each do |vehicule| %>
      <div class="card-trip">
        <% if vehicule.photo.attached? %>
          <%= cl_image_tag vehicule.photo.key, crop: :fill %>
        <% else %>
          <img src="https://images.unsplash.com/photo-1543599723-86e84893ebba?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1494&q=80" height="500" width="400" />
        <% end %>
        <div class="card-trip-infos">
          <div>
            <h2><%= link_to vehicule.title, vehicule_path(vehicule) %></h2>
            <p><%= vehicule.description %></p>
            <p> A partir de <strong><%=vehicule.daily_price.round%>€</strong></p>
          </div>
          <img src="https://cdn3.vectorstock.com/i/1000x1000/50/97/space-alien-head-on-white-background-design-vector-22325097.jpg" class="card-trip-user avatar-bordered" />
        </div>
      </div>
    <% end %>
    </div>

  </div>




